{
    /* Appearance */
    "workbench.colorTheme": "FireFly Pro Bright",
    "workbench.iconTheme": "catppuccin-latte",
    "workbench.productIconTheme": "fluent-icons",
    "workbench.colorCustomizations": {},
    "editor.glyphMargin": false,
    "window.zoomLevel": 0.85,
    /* Editor */
    "editor.wordWrap": "on",
    "editor.minimap.maxColumn": 70,
    "editor.tabSize": 2,
    "editor.detectIndentation": true,
    "editor.linkedEditing": true,
    "editor.gotoLocation.multipleDefinitions": "goto",
    "diffEditor.ignoreTrimWhitespace": false,
    "window.density.editorTabHeight": "compact",
    /* Editor.Scroll */
    "editor.mouseWheelScrollSensitivity": 2.4,
    "editor.smoothScrolling": true,
    /* Editor.Font */
    "editor.fontSize": 15,
    "editor.fontWeight": "500",
    "editor.lineHeight": 20,
    "editor.fontLigatures": true,
    "editor.fontFamily": "'JetBrainsMono NF', 'JetBrains Mono', 'FiraCode Nerd Font', 'Droid Sans Mono', 'monospace', monospace",
    /* Editor.Suggestions */
    "editor.suggestSelection": "first",
    "editor.quickSuggestionsDelay": 0,
    /* Editor.Cursor */
    "editor.cursorBlinking": "expand",
    "editor.cursorStyle": "line-thin",
    "editor.cursorSmoothCaretAnimation": "explicit",
    "editor.multiCursorModifier": "ctrlCmd",
    /* Formatting */
    "prettier.semi": true,
	"prettier.useTabs": false,
	"prettier.singleQuote": true,
	"prettier.jsxSingleQuote": true,
	"prettier.printWidth": 120,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.formatOnSave": false,
    "editor.insertSpaces": false,
	"editor.codeActionsOnSave": {
		"source.organizeImports": "explicit"
	},
    // Emmet
	"emmet.includeLanguages": {
		"blade": "html",
		"javascript": "javascriptreact"
	},
	"emmet.triggerExpansionOnTab": true,
    /* HTML */
    "html.autoClosingTags": true,
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    /* JavaScript & TypeScript */
    "javascript.preferences.quoteStyle": "single",
    "javascript.autoClosingTags": true,
    "javascript.format.semicolons": "insert",
    "typescript.autoClosingTags": true,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "typescript.format.semicolons": "insert",
    "typescript.preferences.quoteStyle": "single",
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    /* Other languages */
    "[prisma]": {
		"editor.defaultFormatter": "Prisma.prisma"
	},
    "[nginx]": {
        "editor.defaultFormatter": "raynigon.nginx-formatter"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[vue]": {
        "editor.defaultFormatter": "octref.vetur"
    },
    /* Misc */
    "vsicons.presets.foldersAllDefaultIcon": true,
    "files.trimTrailingWhitespace": true,
    "explorer.confirmDelete": false,
    "vsicons.dontShowNewVersionMessage": true
}
